{% extends 'base.html.twig' %}
{% block body %}
    <body class="home header-has-img loading">
        {% block mobile_nav %}
            <div class="mobile-nav">
                <button class="btn-mobile mobile-nav-close"><i class="rsicon rsicon-close"></i></button>

                <div class="mobile-nav-inner">
                    <nav id="mobile-nav" class="nav">
                        <ul class="clearfix">
                            <li><a href="{{ path('home', {'_fragment': 'about'}) }}">About</a></li>
                            <li><a href="{{ path('home', {'_fragment': 'skills'}) }}">Skills</a></li>
                            <li><a href="{{ path('home', {'_fragment': 'projects'}) }}">Projects</a> </li>
                            <li><a href="{{ path('home', {'_fragment': 'experience'}) }}">Experience</a></li>
                            <li>
                                <a href="{{ path('blog_list') }}">Blog</a>
                            </li>
                            <li><a href="{{ path('home', {'_fragment': 'contact'}) }}">Contact <span></span></a></li>
                        </ul>
                    </nav>
                </div>
            </div><!-- .mobile-nav -->
        {% endblock %}

        {% block sidebar %}
            <div class="sidebar sidebar-fixed">
                <button class="btn-sidebar btn-sidebar-close"><i class="rsicon rsicon-close"></i></button>

                <div class="widget-area">
                    <aside class="widget widget-recent-posts">
                        <h2 class="widget-title">Recent posts</h2>
                        <ul>
                            {% for post in posts %}
                                <li>
                                    <div class="post-tag">
                                        {% for tag in post.tags %}
                                            <b>#{{ tag.name }}</b>
                                        {% endfor %}
                                    </div>
                                    <h3 class="post-title"><a href="{{ path('blog_post', {slug: post.slug}) }}">{{ post.title }}</a></h3>
                                    <div class="post-info"><i class="rsicon rsicon-eye"></i>{{ post.pageViews }} page views</div>
                                </li>
                            {% endfor %}
                        </ul>
                    </aside>
                </div>
                <!-- .widget-area -->
            </div>
        {% endblock %}

        {% block header %}
            <header class="header">
                <div class="head-bg" style="background-image: url({{ asset('img/uploads/background.jpg') }})"></div>

                <div class="head-bar">
                    <div class="head-bar-inner">
                        <div class="row">
                            <div class="col-sm-3 col-xs-6">
                                <a class="logo" href="{{ path('home') }}"><span>{{ freelancer.firstName | upper}}</span>{{ freelancer.lastName | upper }}</a>
                                <!-- <a class="head-logo" href=""><img src="img/rs-logo.png" alt="RScard"/></a> -->
                            </div>

                            <div class="col-sm-9 col-xs-6">
                                <div class="nav-wrap">
                                    <nav id="nav" class="nav">
                                        <ul class="clearfix">
                                            <li><a href="{{ path('home', {'_fragment': 'about'}) }}">About</a></li>
                                            <li><a href="{{ path('home', {'_fragment': 'skills'}) }}">Skills</a></li>
                                            <li><a href="{{ path('home', {'_fragment': 'projects'}) }}">Projects</a> </li>
                                            <li><a href="{{ path('home', {'_fragment': 'experience'}) }}">Experience</a></li>
                                            <li>
                                                <a href="{{ path('blog_list') }}">Blog</a>
                                            </li>
                                            <li><a href="{{ path('home', {'_fragment': 'contact'}) }}">Contact <span></span></a></li>
                                        </ul>
                                    </nav>

                                    <button class="btn-mobile btn-mobile-nav">Menu</button>
                                    <button class="btn-sidebar btn-sidebar-open"><i class="rsicon rsicon-menu"></i></button>
                                </div>
                                <!-- .nav-wrap -->
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        {% endblock %}

        {% block footer %}
            <footer class="footer">
                <div class="footer-social">
                    <div style="margin-top: 20px;">
                        <p class="text-center"><img src="{{ asset('img/favicon/apple-icon-72x72.png') }}" alt="Julian Li"/></p>
                        <p class="text-center" style="font-size: 14px; color:#999;">All content copyright Julian Li</p>
                    </div>
                </div>
            </footer><!-- .footer -->
        {% endblock %}

        {% block preloader %}
            <a class="btn-scroll-top" href="#"><i class="rsicon rsicon-arrow-up"></i></a>

            <div id="overlay"></div>
            <div id="preloader">
                <div class="preload-icon"><span></span><span></span></div>
                <div class="preload-text">Loading ...</div>
            </div>
        {% endblock %}

    {% block javascripts %} {{ parent() }} {% endblock %}
    </body>
{% endblock %}